<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= @user.email %>
  <div>
    <%= @user.self_introduction %>
  </div>
  <div>
    <%= link_to '削除', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
    <%= link_to '戻る', admin_dashboards_path %>
  </div>
</div>

<div class="card-list-container py-5">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to admin_post_path(post.id) do %>
      <%= image_tag post.get_image, class: "card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to admin_user_path(post.user.id) do %>
            <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(admin_post_path(post.id), class: "text-dark") do %>
              <strong><span>ホテル名: <%= post.title %></span></strong>
            <% end %>
          </p>
          <p>
            <span>ユーザー名:<%= post.user.name %> </span>
          </p>
          <p>
          <span>投稿日:<%= post.created_at.strftime('%Y/%m/%d') %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
 </div>
 


