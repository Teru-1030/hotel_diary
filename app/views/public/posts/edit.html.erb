<div>
  <%= flash[:notice] %>
</div>
<h1>投稿編集画面</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= render 'form', post: @post, tag_name: @tag_name %>
<% if @post.user == current_user %>
 <%= link_to "投稿削除", post_path(@post), method: :delete , class: "btn btn-outline-danger mx-1", data: { confirm: "本当に削除しますか？" } %>
<% end %>