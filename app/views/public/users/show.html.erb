<div>
  <%= flash[:notice] %>
</div>
<div>
  <h3><%= @user.name %></h3>
  <table>
  <tbody>
    <tr>
      <%= image_tag @user.get_profile_image(100,100) %>
    </tr>
    <tr>
      <th>自己紹介文：</th>
      <th><%= @user.self_introduction %></th>
    </tr>
    </tbody>
  </table>
  <% unless @user.guest_user? %>
    <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  <% end %>
  <% if @user == current_user %>
    <%= link_to "いいね一覧", likes_user_path(@user) %>
  <% end %>

</div>


<%= render 'public/posts/list', posts: @posts %>