<div>
  <%= flash[:notice] %>
</div>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% unless @user.guest_user? %>
    <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  <% end %>
</div>


<%= render 'public/posts/list', posts: @posts %>